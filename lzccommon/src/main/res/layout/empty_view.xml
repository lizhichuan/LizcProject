<?xml version="1.0" encoding="utf-8"?>
<com.njcool.lzccommon.view.swprefresh.CoolSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swp_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    android:scrollbars="none">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_no_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/img_no_data_common" />

            <TextView
                android:id="@+id/tv_no_data_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="暂无更多数据~"
                android:textColor="@color/common_hint"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</com.njcool.lzccommon.view.swprefresh.CoolSwipeRefreshLayout>
